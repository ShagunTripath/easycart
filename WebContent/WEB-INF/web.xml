<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>com.easycart.login</display-name>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
   
  </welcome-file-list>
  <!--  servlet mapping -->
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.easycart.login.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>com.easycart.login.Welcome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/Welcome</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>RegisterUser</servlet-name>
        <servlet-class>com.easycart.reg.RegisterUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterUser</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterDao</servlet-name>
        <servlet-class>com.easycart.reg.RegisterDao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterDao</servlet-name>
        <url-pattern>/registered</url-pattern>
    </servlet-mapping>
</web-app>